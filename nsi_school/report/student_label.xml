<odoo>
    <!--    Paper Format Dispatch Label-->
    <record id="paper_format_label"
            model="report.paperformat">
        <field name="name">Dispatch Label Paper</field>
        <field name="default"
               eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">101</field>
        <field name="page_width">101</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">00</field>
        <field name="margin_bottom">00</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line"
               eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">125</field>
    </record>

    <!--    Record Label-->
    <record id="action_report_label"
            model="ir.actions.report">
        <field name="name">Dispatch Label</field>
        <field name="model">school.student</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">nsi_school.report_dispatch_label</field>
        <field name="report_file">nsi_school.report_dispatch_label</field>
        <field name="binding_model_id"
               ref="model_school_student"/>
    </record>

    <!--    Report Label-->
    <template id="report_dispatch_label">
        <t t-call="web.html_container">
            <div class="header"/>
            <t t-call="web.external_layout">
                <t t-foreach="docs"
                   t-as="o">
                    <div class="page"
                         style="padding:10px; width:99%; height:99%;">
                        <!--    Upper Table for Company Details -->
                        <table style="width:100%; border-collapse: collapse;"
                               class="table-bordered">
                            <tr>
                                <td style=" text-align: center; vertical-align: top; width:20%; border:1px solid black; ">
                                    <img t-if="o.logo"
                                         t-att-src="'data:image/png;base64,' + res_company.logo.decode('utf-8')"
                                         style="width: 80px; height: 60px;"/>
                                </td>
                                <td style="text-align: center; width:80%; border:1px solid black; ">
                                    <h2>DHAM FASTENERS</h2>

                                    <p>W-94(A), MIDC AMBAD NASHIK-422010 TEL.NO +91 253 2382524</p>
                                </td>
                            </tr>
                        </table>


                        <table style="width:100%; border-collapse: collapse; font-size:13px; border:0.5px solid black;"
                               class="table-bordered">
                            <tr style="padding:10px;">
                                <td style="text-align: center; font-weight:bold;">
                                    <strong>
                                        <t t-esc="object.nsi_pdi.party_id.name"/>
                                    </strong>
                                </td>
                                <td style="text-align: center; font-size:10px;"
                                    colspan="2">
                                    <strong>
                                        <t t-esc="object.product_name"/>
                                    </strong>
                                    <br/>
                                    <t t-esc="object.product_desc"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:10px;"
                                    rowspan="2">
                                    <strong>Invoice:
                                        <t t-esc="object.name"/>
                                        <br/>
                                        Invoice Qty:
                                        <t t-esc="object.invoice_qty"/>
                                        <br/>
                                        Box Qty:
                                        <t t-esc="object.box_qty"/>
                                        <br/>
                                        Weight:
                                        <t t-esc="object.weight"/>
                                        <br/>
                                        No of Bags:
                                        <t t-esc="object.no_of_bags"/>
                                        <br/>
                                        Lot No:
                                        <t t-esc="object.lot_no"/>
                                        <br/>
                                    </strong>
                                </td>
                                <td style="padding:10px">
                                </td>
                                <td style="padding:10px">
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2"
                                    align="center"
                                    style="padding:10px;">
                                    <img t-att-src="'/report/barcode/?type=QR&amp;value=' + object.qr_code"
                                         style="width:100px; height:100px;"/>
                                    <!--                                    <img t-att-src="'/report/barcode/QR/' + o.student_id"-->
                                    <!--                                         style="width:100px; height:100px; align-item:center;"-->
                                    <!--                                         alt="QRCODE"/>-->
                                    <br/>
                                    <br/>
                                    <span style="padding:2px 10px; background-color:black; width:100%; color:white;">
                                        Scan For
                                        PD
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3"
                                    style="padding:5px;">
                                    <strong>Invoice Date:
                                        <t t-esc="object.invoice_date"/>
                                    </strong>
                                </td>
                            </tr>
                        </table>
                    </div>

                </t>
            </t>
        </t>
    </template>

</odoo>