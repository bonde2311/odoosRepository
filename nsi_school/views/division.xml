<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action -->
    <record id="action_school_division" model="ir.actions.act_window">
        <field name="name">Division</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.division</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                Create and manage departments here.
                <br/>
                <h1>By Durgesh Bagul | Gaurav Bonde</h1>
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_division"
              name="Division"
              parent="menu_school_master"
              action="action_school_division"
              sequence="5"/>

    <!-- Form View -->
    <record id="view_division_form" model="ir.ui.view">
        <field name="name">division.form</field>
        <field name="model">school.division</field>
        <field name="arch" type="xml">
            <form string="Division">
                <sheet>
                    <group>
                        <field name="rel_class_id" required="1" options="{'no_create': True}"/>
                        <field name="name" required="1"/>
<!--                        <field name="rel_student_id" required="1"/>-->

                    </group>
                    <notebook>
                        <page string="Student">
                            <field name="rel_student_id">
                                <tree create="0" delete="0">
                                    <field name="student_id"/>
                                    <field name="student_name"/>
                                    <field name="email"/>
                                    <field name="mobile_no"/>
                                    <field name="rel_department_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_division_tree" model="ir.ui.view">
        <field name="name">division.tree</field>
        <field name="model">school.division</field>
        <field name="arch" type="xml">
            <tree string="Division">
                <field name="name"/>
                <field name="rel_class_id"/>
                <field name="rel_student_id"/>
            </tree>
        </field>
    </record>

</odoo>