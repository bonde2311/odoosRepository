<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_admission_tree"
            model="ir.ui.view">
        <field name="name">admission.tree</field>
        <field name="model">school.admission</field>
        <field name="arch"
               type="xml">
            <tree string="Admission">
                <field name="name"/>
                <field name="date"/>
                <field name="profile_pic"
                       widget="image"
                       options="{'size': [40,40]}"/>
                <field name="rel_student_id"/>
                <field name="student_name"/>
                <field name="student_dep"/>
                <field name="student_cls"/>
                <field name="rel_division_id"/>
                <field name="status"
                       widget="badge"
                       decoration-success="status == 'approved'"
                       decoration-danger="status == 'rejected'"
                       decoration-info="status == 'pending'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_school_admission_form"
            model="ir.ui.view">
        <field name="name">school.admission.form</field>
        <field name="model">school.admission</field>
        <field name="arch"
               type="xml">
            <form string="Admission Form">
                <header style="padding:5px;">
                    <field name="status"
                           widget="statusbar"
                           nolabel="1"
                           options="{'clickable':'1'}"/>
                </header>
                <sheet>
                    <div style="text-align:center;">
                            <h2 style="color:#3E2A6B; font-weight:600; background-color:#F5F5F5; padding:3px; border-radius:5px;margin-bottom:10px;">
                                Student Admission Form
                            </h2>
                        </div>
                    <group string="Student Details">
                        <group>
                            <field name="rel_student_id"
                                   force_save="1"
                                   options="{'no_create': True}"/>
                            <field name="student_id"
                                   readonly="1"
                                   force_save="1"/>
                            <field name="student_name"
                                   readonly="1"
                                   force_save="1"/>
                            <field name="student_email"
                                   readonly="1"
                                   force_save="1"/>
                            <field name="student_mobile_no"
                                   readonly="1"
                                   force_save="1"/>
                            <field name="student_gender"
                                   readonly="1"
                                   force_save="1"/>
                            <field name="student_age"
                                   readonly="1"
                                   force_save="1"/>
                            <field name="student_birth_date"
                                   readonly="1"
                                   force_save="1"/>
                        </group>
                        <group>
                            <field name="name"
                                   readonly="1"/>
                            <field name="date"/>
                            <field name="profile_pic"
                            widget="image"
                            class="oe_avatar"
                            options="{'size': [100,100]}"/>
                            <field name="student_sign"
                            widget="image"
                            class="oe_avatar"
                            options="{'size': [100, 60]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Academic Details">
                            <group>
                                <field name="student_dep"
                                       readonly="1"
                                       force_save="1"/>
                                <field name="student_cls"
                                       readonly="1"
                                       force_save="1"/>
                                <field name="rel_division_id"
                                       required="1"
                                       options="{'no_create': True}"/>
                            </group>
                        </page>
                        <page string="Fees Structure">
                            <group>
                                <field name="rel_fees_id"
                                       string=''>
                                    <tree create="0"
                                          delete="0">
                                        <field name="fee_date"/>
                                        <field name="due_date"/>
                                        <field name="fees_type"/>
                                        <field name="total_fee"/>
                                        <field name="paid_amount"/>
                                        <field name="remaining_amount"/>
                                        <field name="payment_status"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_school_admission"
            model="ir.actions.act_window">
        <field name="name">Admissions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.admission</field>
        <field name="view_mode">tree,form</field>
        <field name="help"
               type="html">
            <p>
                Create and manage departments here.
                <br/>
                <h1>By Durgesh Bagul | Gaurav Bonde</h1>
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_admission"
              name="Admissions"
              parent="menu_office"
              action="action_school_admission"
              sequence="1"/>

</odoo>