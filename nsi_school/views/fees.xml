<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_school_fees_tree" model="ir.ui.view">
        <field name="name">school.fees.tree</field>
        <field name="model">school.fees</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="student_id"/>
                <field name="student_name"/>
                <field name="student_department"/>
                <field name="student_class"/>
                <field name="student_division"/>
                <field name="fee_date"/>
                <field name="due_date" widget="remaining_days"/>
                <field name="total_fee"/>
                <field name="paid_amount"/>
                <field name="remaining_amount"/>
                <field name="payment_status" widget="badge"
                       decoration-success="payment_status == 'paid'"
                       decoration-danger="payment_status == 'unpaid'"
                       decoration-info="payment_status == 'partially_paid'"/>
<!--                <button name="action_print_receipt"-->
<!--                        type="object"-->
<!--                        icon="fa-download"-->
<!--                        string="Download Receipt"-->
<!--                        class="oe_highlight"/>-->
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_school_fees_form" model="ir.ui.view">
        <field name="name">school.fees.form</field>
        <field name="model">school.fees</field>
        <field name="arch" type="xml">
            <form string="School Fees">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1" force_save="1"/>
                            <field name="rel_admission_id" force_save="1" options="{'no_create': True}"/>
                            <field name="student_id" readonly="1" force_save="1"/>
                            <field name="student_name" readonly="1" force_save="1"/>
                            <field name="student_department" readonly="1" force_save="1"/>
                            <field name="student_class" readonly="1" force_save="1"/>
                            <field name="student_division" readonly="1" force_save="1"/>
                            <field name="remark"/>
                        </group>
                        <group>
                            <field name="fees_type" required="1" force_save="1"/>
                            <field name="fee_date" required="1" force_save="1"/>
                            <field name="due_date"/>
                            <field name="total_fee" readonly="1" force_save="1"/>
                            <field name="paid_amount" required="1" force_save="1"/>
                            <field name="remaining_amount" readonly="1" force_save="1"/>
                            <field name="payment_status" readonly="1" force_save="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Action -->
    <record id="action_school_fees" model="ir.actions.act_window">
        <field name="name">Fees Records</field>
        <field name="res_model">school.fees</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_fees"
              name="Fees" parent="menu_office"
              action="action_school_fees"
              sequence="2"/>

</odoo>